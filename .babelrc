{
    "presets": [
        [
            "es2015", {
                "modules": false
            }
        ],
        "es2016",
        "react"
    ],
    "plugins": [
        "transform-class-properties",
        "transform-object-rest-spread",
        "transform-decorators-legacy"
    ],
    "env": {
        "test": {
            "plugins": [
                [
                    "__coverage__", {
                        "ignore": [
                            "**/*-test.js",
                            "lib/polyfill.js",
                            "lib/browser.js", // Browser util unit tests not worthwhile
                            "lib/viewers/media/*.js" // Ignore media files for now - tests will come
                        ],
                    }
                ],
                ["babel-plugin-transform-require-ignore", {
                    "extensions": [".scss"]
                }],
            ]
        }
    }
}
